{
  "name": "vue-pack",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "format": "prettier --write \"**/{src,test}/**/*.{json,js,vue}\" \"*.{json,js}\" && prettier-tslint fix \"**/{src,test}/**/*.ts\"",
    "postformat": "lerna run lint -- --fix",
    "pretest": "npm run build",
    "test": "cross-env FORCE_COLOR=1 lerna run test --stream && jest --verbose"
  },
  "workspaces": [
    "packages/@gluons/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@gluons/prettier-config": "^2.0.3",
    "@types/autoprefixer": "^9.7.2",
    "@types/cheerio": "^0.22.18",
    "@types/jest": "^26.0.0",
    "@types/node": "14",
    "@types/webpack": "^4.41.13",
    "@types/webpackbar": "^4.0.0",
    "@vue/server-test-utils": "^1.0.3",
    "@vue/test-utils": "^1.0.3",
    "babel-jest": "^26.0.0",
    "chalk": "^4.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^7.0.2",
    "jest": "^26.0.0",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^3.0.2",
    "testcafe": "^1.8.5",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.2",
    "tslint-config-gluons": "^2.2.0",
    "typescript": "^4.0.0",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^5.0.0"
  },
  "version": "0.0.0"
}
