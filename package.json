{
  "name": "vue-pack",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "format": "prettier --write \"**/{src,test}/**/*.{json,js,vue}\" \"*.{json,js}\" && prettier-tslint fix \"**/{src,test}/**/*.ts\"",
    "postformat": "lerna run lint -- --fix",
    "test": "cross-env FORCE_COLOR=1 lerna run test --stream && jest --verbose"
  },
  "workspaces": [
    "packages/@gluons/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.3.3",
    "@gluons/prettier-config": "^2.0.0",
    "@types/cheerio": "^0.22.10",
    "@types/jest": "^24.0.5",
    "@types/node": "8",
    "@types/webpack": "^4.4.24",
    "@types/webpackbar": "^2.6.0",
    "@vue/server-test-utils": "^1.0.0-beta.29",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-jest": "^24.1.0",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.2",
    "cross-env": "^5.2.0",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "prettier": "^1.16.4",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^2.6.3",
    "testcafe": "^1.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-gluons": "^2.1.0",
    "typescript": "^3.3.3",
    "vue": "^2.6.6",
    "vue-class-component": "^6.3.2",
    "vue-server-renderer": "^2.6.6",
    "vue-template-compiler": "^2.6.6"
  }
}
