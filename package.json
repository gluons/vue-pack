{
  "name": "vue-pack",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "format": "prettier --write \"**/{src,test}/**/*.{json,js,vue}\" \"*.{json,js}\" && prettier-tslint fix \"**/{src,test}/**/*.ts\"",
    "postformat": "lerna run lint -- --fix",
    "pretest": "npm run build",
    "test": "cross-env FORCE_COLOR=1 lerna run test --stream && jest --verbose"
  },
  "workspaces": [
    "packages/@gluons/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@gluons/prettier-config": "^2.0.0",
    "@types/autoprefixer": "^9.6.1",
    "@types/cheerio": "^0.22.15",
    "@types/jest": "^24.0.25",
    "@types/node": "10",
    "@types/webpack": "^4.41.1",
    "@types/webpackbar": "^2.6.0",
    "@vue/server-test-utils": "^1.0.0-beta.30",
    "@vue/test-utils": "^1.0.0-beta.30",
    "babel-jest": "^25.0.0",
    "chalk": "^3.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^7.0.0",
    "jest": "^25.0.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^3.0.0",
    "testcafe": "^1.7.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-gluons": "^2.1.0",
    "typescript": "^3.7.4",
    "vue": "^2.6.11",
    "vue-class-component": "^7.1.0",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5"
  }
}
