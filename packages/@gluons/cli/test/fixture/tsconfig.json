{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"lib": [
			"dom",
			"es2015"
		],
		"esModuleInterop": true,
		"strict": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@com/*": ["src/components/*"]
		}
	},
	"include": [
		"src"
	]
}
