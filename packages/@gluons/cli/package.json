{
  "name": "@gluons/vue-pack-cli",
  "version": "1.8.2",
  "description": "A CLI tool for vue-pack.",
  "bin": {
    "vue-pack": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist/*",
    "build": "tsc",
    "lint": "tslint -p .",
    "pretest": "npm run build && ts-node ./scripts/prepareTest.ts",
    "fixture:dev": "cd ./test/fixture && node ../../dist/cli.js dev -n",
    "test:build": "jest -c ./jest.config.json --colors",
    "test:dev": "testcafe firefox ./test/devServer.test.ts -a \"npm run fixture:dev\" --app-init-delay 5000",
    "test": "npm run lint && run-p test:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "keywords": [
    "vue",
    "vuejs",
    "library",
    "bundler",
    "packager",
    "webpack",
    "vue-pack",
    "cli"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/vue-pack/issues"
  },
  "homepage": "https://gluons.github.io/vue-pack/",
  "peerDependencies": {
    "vue": "2"
  },
  "dependencies": {
    "@gluons/vue-pack": "^1.8.2",
    "@gluons/vue-pack-dev": "^1.8.1",
    "@gluons/vue-pack-load-config": "^1.8.1",
    "@gluons/vue-pack-types": "^1.8.1",
    "aggregate-error": "^1.0.0",
    "chalk": "^2.4.1",
    "lodash.isnil": "^4.0.0",
    "lodash.omitby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "nvl": "^1.1.1",
    "yargs": "^12.0.0"
  },
  "devDependencies": {
    "@types/aggregate-error": "^1.0.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/lodash.isnil": "^4.0.4",
    "@types/lodash.omitby": "^4.6.4",
    "@types/lodash.pick": "^4.4.4",
    "@types/yargs": "^12.0.0",
    "cross-spawn": "^6.0.5",
    "npm-run-all": "^4.1.3"
  }
}
