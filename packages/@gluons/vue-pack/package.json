{
  "name": "@gluons/vue-pack",
  "version": "0.2.0",
  "description": "Bundle Vue.js library via webpack.",
  "main": "./dist/bundle.js",
  "typings": "./dist/bundle.d.ts",
  "files": [
    "dist",
    "postcss.config.js"
  ],
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist/*",
    "build": "tsc -p .",
    "lint": "tslint -p .",
    "pretest": "npm run build && ts-node ./scripts/prepareTest.ts",
    "test": "npm run lint && jest -c ./jest.config.json --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "keywords": [
    "vue",
    "vuejs",
    "library",
    "bundler",
    "packager",
    "webpack",
    "vue-pack"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/vue-pack/issues"
  },
  "homepage": "https://github.com/gluons/vue-pack/tree/master/packages/@gluons/vue-pack",
  "peerDependencies": {
    "vue": "2"
  },
  "dependencies": {
    "@intervolga/optimize-cssnano-plugin": "^1.0.5",
    "@sindresorhus/slugify": "^0.3.0",
    "@types/aggregate-error": "^1.0.0",
    "aggregate-error": "^1.0.0",
    "autoprefixer": "^9.1.0",
    "browserslist-config-vue": "^1.0.3",
    "css-loader": "^1.0.0",
    "del": "^3.0.0",
    "joycon": "^1.0.4",
    "joycon-yaml-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "moren": "^1.1.0",
    "node-sass": "^4.9.0",
    "nvl": "^1.1.1",
    "postcss-load-config": "^2.0.0",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "ts-loader": "^4.3.0",
    "vue-loader": "^15.1.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.16.4",
    "webpack-chain": "^4.8.0",
    "webpack-node-externals": "^1.7.2",
    "webpackbar": "^2.6.1"
  },
  "devDependencies": {
    "@types/del": "^3.0.1",
    "jest": "^23.4.2",
    "postcss-brand-colors": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.0"
  },
  "optionalDependencies": {
    "joycon-ts-loader": "^1.0.1"
  }
}
