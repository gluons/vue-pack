{
  "name": "@gluons/vue-pack-dev",
  "version": "1.6.0",
  "description": "A development server for vue-pack (and vue-up).",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "index.pug"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist/*",
    "build": "tsc",
    "lint": "tslint -p .",
    "fixture:dev": "ts-node ./scripts/run.ts",
    "pretest": "npm run build",
    "test": "npm run lint && testcafe firefox ./test/*.test.ts -a \"npm run fixture:dev\" --app-init-delay 5000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-pack.git"
  },
  "keywords": [
    "vue-pack",
    "dev",
    "dev-server",
    "development"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/vue-pack/issues"
  },
  "homepage": "https://github.com/gluons/vue-pack/tree/master/packages/@gluons/dev",
  "dependencies": {
    "autoprefixer": "^9.1.3",
    "browserslist-config-vue": "^1.0.3",
    "css-loader": "^1.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "moren": "^2.0.0",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.1.0",
    "vue-loader": "^15.4.0",
    "webpack": "^4.17.3",
    "webpack-serve": "^2.0.2",
    "webpackbar": "^2.6.2"
  },
  "devDependencies": {
    "@types/webpack-serve": "^2.0.0",
    "@types/webpackbar": "^2.6.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "testcafe": "^0.22.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  }
}
